<% provide(:title, 'Config管理') %>
<h1>Config管理</h1>

<%= form_tag rconfigs_path, :method => 'get' do %>
  <p>
    <table>
<tr valign = "middle">
<td><%= text_field_tag :search, params[:search], placeholder: "タイトルを入力する",class: "form-control"  %></td>
<td><%= submit_tag "検索", class: "btn btn-primary btn-sm" %></td>
<td>&emsp;</td>
<td><%= link_to "新規作成", new_rconfig_path, class: "btn btn-primary btn-sm"  %></td>
</tr>
    </table>
    
    
  </p>
<% end %>

<table class="table table-striped">
  <tr><th>メインコード</th><th>サブコード</th><th>部門タイトル</th><th>説明</th><th>表示FLG</th><th>更新</th></tr>
    <%= render @rconfigs %>
</table>

